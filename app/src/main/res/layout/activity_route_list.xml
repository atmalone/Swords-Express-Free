<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RouteListActivity">

    <RadioGroup
            android:checkedButton="@+id/route_direction_group"
            android:id="@+id/route_direction_group"
            android:layout_width="182dp"
            android:layout_height="31dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/routeListView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp">

        <RadioButton
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/route_rb_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_style"
                android:button="@null"
                android:gravity="center"
                android:text="@string/to_city"
                android:checked="true"
                android:textColor="@color/colorWhite"/>
        <RadioButton
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:id="@+id/route_rb_swords"
                android:background="@drawable/selector_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/to_swords"
                android:textColor="@color/colorWhite"/>

    </RadioGroup>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/routeListView"
            android:layout_width="match_parent"
            android:layout_height="563dp"
            android:layout_alignParentStart="true"
            android:layout_weight="1.05"
            android:foregroundGravity="center"
            android:scrollbars="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            tools:listitem="@layout/route_list_item"
            app:layout_constraintTop_toBottomOf="@+id/route_direction_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>